<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<DialogPane styleClass="background" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="billSplitter.view.dialog.PayeeDialogController">
   <header>
      <Label fx:id="titleLabel" text="Add New Payee">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
   </header>
   <padding>
      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
   </padding>
   <content>
      <VBox  maxHeight="1.7976931348623157E308" prefWidth="300.0">
         <children>
            <Label maxWidth="1.7976931348623157E308" text="First Name" />
            <TextField fx:id="firstNameTextField" maxWidth="1.7976931348623157E308" />
            <Separator maxHeight="-Infinity" maxWidth="1.7976931348623157E308" prefHeight="10.0" visible="false" />

            <Label maxWidth="1.7976931348623157E308" text="Last Name" />
            <TextField fx:id="lastNameTextField" maxWidth="1.7976931348623157E308" />
            <Separator maxHeight="-Infinity" maxWidth="1.7976931348623157E308" prefHeight="10.0" visible="false" />

            <Label maxWidth="1.7976931348623157E308" text="Notes" />
            <TextArea fx:id="notesTextArea" maxWidth="1.7976931348623157E308" prefRowCount="2" text="" wrapText="true" />
            <Separator layoutX="21.0" layoutY="117.0" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" prefHeight="10.0" visible="false" />

            <ButtonBar prefHeight="40.0" prefWidth="200.0">
              <buttons>
                <Button mnemonicParsing="false" onAction="#handleCancelButton_OnClicked" text="Cancel" />
                 <Button fx:id="applyButton" layoutX="218.0" layoutY="17.0" mnemonicParsing="false" onAction="#handleApplyButton_OnClicked" text="Apply" />
              </buttons>
            </ButtonBar>
         </children>
      </VBox>
   </content>
   <stylesheets>
      <URL value="@/billSplitter/view/DefaultStyles.css" />
   </stylesheets>
</DialogPane>
